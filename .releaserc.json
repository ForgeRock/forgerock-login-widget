{
  "branches": [
    {
      "name": "main"
    },
    "+([0-9])?(.{+([0-9]),x}).x",
    {
      "name": "beta",
      "channel": "beta",
      "prerelease": true
    },
    {
      "name": "alpha",
      "channel": "alpha",
      "prerelease": true
    },
    {
      "name": "next",
      "channel": "next"
    }
  ],
  "ci": true,
  "repositoryUrl": "https://github.com/cerebrl/forgerock-web-login-framework.git",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "package/CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepare": "./tools/modify-gitignore.sh"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "./package"
      }
    ],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "assets": ["package/*.{js,css,.d.ts,.cjs,json,md}", "package.json", "!.gitignore"]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["package/*.{js,css,.d.ts,.cjs,json,md}", "!package/node_modules/*"]
      }
    ],
    [
      "semantic-release-slack-bot",
      {
        "notifyOnSuccess": true,
        "notifyOnFail": false,
        "packageName": "@forgerock/login-widget"
      }
    ]
  ]
}
